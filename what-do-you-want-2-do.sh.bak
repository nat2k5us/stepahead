# Function to run a deployment script
run_script() {
    local script_name=$1
    local script_path="$DEPLOYMENT_DIR/$script_name"

    if [ -f "$script_path" ]; then
        echo ""
        echo -e "${BLUE}â–¶ Running: $script_name${NC}"
        echo -e "${CYAN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        echo ""
        "$script_path"
        local exit_code=$?
        echo ""
        if [ $exit_code -eq 0 ]; then
            echo -e "${GREEN}âœ… Completed successfully!${NC}"
        else
            echo -e "${RED}âŒ Script exited with code: $exit_code${NC}"
        fi
    else
        echo -e "${RED}âŒ Error: Script not found: $script_path${NC}"
        exit 1
    fi
}

